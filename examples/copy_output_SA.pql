// vim: syntax=pequel ts=4 sw=4
//:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
//  Script      : copy_output_SA.pql
//:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::

options
    optimize                // (default) optimize generated code.
	hash
    doc_title("Copy Output Record Example Script")
    doc_email("sample@youraddress.com")
    doc_version(2.3)

description section

input section
    LOCATION
	PRODUCT_CODE
    SALES_TOTAL
	LOCATION_NAME => 'South Australia'

sort by
	PRODUCT_CODE

group by
	PRODUCT_CODE

output section
	string LOCATION_NAME	LOCATION_NAME
	string PRODUCT_CODE		PRODUCT_CODE
    decimal SALES_TOTAL	 	sum SALES_TOTAL
	
copy output record (pequel:copy_output_combiner.pql)
	SALES_TOTAL > 0
